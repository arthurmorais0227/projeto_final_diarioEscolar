generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Postagem {
  id          Int          @id @default(autoincrement())
  autor       String?
  descricao   String?
  data        DateTime     @default(now())
  imagem      String?

  comentarios Comentario[]
}

model Comentario {
  id          Int       @id @default(autoincrement())
  autor       String?
  comentario  String?
  data        DateTime  @default(now())
  
  id_postagem Int
  postagem    Postagem  @relation(fields: [id_postagem], references: [id], onDelete: Cascade)
}
